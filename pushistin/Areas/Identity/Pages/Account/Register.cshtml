@page
@model RegisterModel
@{
    ViewData["Title"] = "Регистрация";
}
<div class="identity-form spad">
    <div class="row">
        <div class="col-lg-12">
            <section class="identity__form__title">
                <h2>@ViewData["Title"]</h2>
            </section>
        </div>
    </div>
    <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
        <hr />
        <div class="row">
            <div class="col-lg-12">
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.UserName" class="" autocomplete="username" aria-required="true" placeholder="логин" />
                    @*                <label asp-for="Input.UserName" class="form-label">Логин</label>*@
                    <span asp-validation-for="Input.UserName" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="" autocomplete="email" aria-required="true" placeholder="почта" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" class="" autocomplete="new-password" aria-required="true" placeholder="пароль" />
                    @*                <label asp-for="Input.Password" class="form-label">Пароль</label>*@
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.ConfirmPassword" class="" autocomplete="new-password" aria-required="true" placeholder="подтвердите пароль" />
                    @*                <label asp-for="Input.Password" class="form-label">Пароль</label>*@
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
                <div>
                    <button id="registerSubmit" type="submit" class="w-100 site-btn btn-lg">создать аккаунт</button>
                </div>
            </div>
        </div>

    </form>
</div>
