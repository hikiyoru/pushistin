@page
@model IndexModel
@{
    ViewData["Title"] = "Заказы";
    ViewData["ActivePage"] = ManageNavPages.Index;
}
<div class="identity__form__title"><h4>История заказов</h4></div>



<div class="shoping__cart__table">
    @if ( @Model != null && @Model._orders.Any())
    {
        <table class="table">
            <thead>
            <tr>
                <th scope="col">Номер заказа</th>
                <th scope="col">Дата</th>
                    <th scope="col">К оплате</th>
                    <th scope="col">Способ оплаты</th>
                <th scope="col">Оплачен</th>
                <th scope="col">Статус</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var order in Model._orders)
            {
                <tr>
                    <th scope="row">#@order.OrderID</th>
                        <td>@order.Created</td>
                        <td>@order.Price</td>
                        <td>@order.PaymentWay</td>
                        @if (order.Paid == true)
                        {
                            <td style="color: green;">Да</td>
                        }
                        @if (order.Paid == false)
                        {
                            <td style="color: red;">Нет</td>
                        }
                        @if (order.Paid == null)
                        {
                            <td></td>
                        }
                        <td>@order.Status</td>
                </tr>
            }
            </tbody>
        </table>
    }
    else
    {

        <h3 style="color: grey; margin-top: .5em">Ваша история заказов пуста</h3>
    }
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
