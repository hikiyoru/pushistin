@page
@model LoginModel

@{
    ViewData["Title"] = "Авторизация";
}
<div class="identity-form spad">
    <div class="row">
        <div class="col-lg-12">
            <section class="identity__form__title">
                <h2>@ViewData["Title"]</h2>
            </section>
        </div>
    </div>
    <form id="account" method="post">
        <hr />
        <div class="row">
            <div class="col-lg-12">
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.UserName" class="" autocomplete="username" aria-required="true" placeholder="логин" />
    @*                <label asp-for="Input.UserName" class="form-label">Логин</label>*@
                    <span asp-validation-for="Input.UserName" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" class="" autocomplete="current-password" aria-required="true" placeholder="пароль" />
    @*                <label asp-for="Input.Password" class="form-label">Пароль</label>*@
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="identity__input__checkbox">
                    <label asp-for="Input.RememberMe" class="">
                        <input class="form-check-input" asp-for="Input.RememberMe" />
                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                        <span class="checkmark"></span>
                    </label>
                </div>
                <div>
                    <button id="login-submit" type="submit" class="w-100 site-btn btn-lg">Войти</button>
                </div>
                <div>
                    <p>
                        <a id="forgot-password" asp-page="./ForgotPassword">Забыли пароль?</a>
                    </p>
                </div>
            </div>
        </div>
        
    </form>
</div>

