@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Восстановление доступа к аккаунту";
}
<div class="identity-form spad">
    <div class="row">
        <div class="col-lg-12">
            <section class="identity__form__title">
                <h2>@ViewData["Title"]</h2>
            </section>
        </div>
    </div>
    <form id="account" method="post">
        <hr />
        <div class="row">
            <div class="col-lg-12">
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                    @*                <label asp-for="Input.UserName" class="form-label">Логин</label>*@
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div>
                    <button id="login-submit" type="submit" class="w-100 site-btn btn-lg">сбросить пароль</button>
                </div>
            </div>
        </div>

    </form>
</div>

